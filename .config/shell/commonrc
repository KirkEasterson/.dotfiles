# A common rc file for various POSIX compliant shells

source ~/.config/shell/exports
source ~/.config/shell/aliases
source ~/.config/shell/functions

if [ -f "$HOME/.cargo/env" ] ;
  then . "$HOME/.cargo/env"
fi

# PATH
if [ -d "$HOME/.bin" ] ;
  then PATH="$HOME/.bin:$PATH"
fi

if [ -d "$HOME/.local/bin" ] ;
  then PATH="$HOME/.local/bin:$PATH"
fi
