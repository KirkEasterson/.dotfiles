# terminals
super + {_,shift +} Return
	{flatpak run org.wezfurlong.wezterm,alacritty}

# browsers
super + {_,shift +} w
	{firefox,chromium-browser}

# file managers
super + {_,shift +} e
	{pcmanfm,lflauncher}

# screen locker
super + ctrl + q
	light-locker-command -l

# program launcher
super + space
	rofi -show drun

# media keys
XF86Audio{Raise,Lower}Volume
	pactl set-sink-volume @DEFAULT_SINK@ {+,-}10%
XF86AudioMute
	pactl set-sink-mute @DEFAULT_SINK@ toggle
XF86AudioMicMute
	pactl set-source-mute @DEFAULT_SOURCE@ toggle
XF86Audio{Play,Stop,Prev,Next}
	playerctl {play-pause,stop,prev,next}

# brightness keys
XF86MonBrightness{Down,Up}
	brightnessctl -q set 5%{-,+}

# screenshot
{_,shift +} Print
	flameshot {gui,full}

# keyboard layouts
super + shift + a
	setxkbmap us
super + shift + s
	setxkbmap se
super + shift + g
	setxkbmap no
