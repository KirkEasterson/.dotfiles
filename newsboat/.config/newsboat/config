# general settings
auto-reload yes
reload-time 10 # in minutes
reload-threads 5
max-items 50
notify-program "notify-send"
notify-beep yes

datetime-format "%d %b %Y %H:%M"
feedlist-format "%?T?  %8u  %t  %4S & --- %t ?"
articlelist-format "%4i  %D  %?T?|%-20T| ? %t"

# externel browser
browser "w3m %u"
macro m set browser "mpv %u"; open-in-browser ; set browser "w3m %u"
macro l set browser "firefox %u"; open-in-browser ; set browser "w3m %u"

include "./mappings"
include "./theme"
