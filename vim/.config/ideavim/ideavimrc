" this can't include variables
source ~/.config/vim/vimrc

" editor actions
map <C-Tab> <Action>(NextTab)
map <C-S-Tab> <Action>(PreviousTab)

map <C-p> <Action>(PopupMenu-selectPrev)
map <C-n> <Action>(PopupMenu-selectNext)
map <C-p> <Action>(PopupMenu-selectPrev)
map <C-n> <Action>(PopupMenu-selectNext)

map <C-w> <Action>(CloseEditor)

" finders
map <leader>ff <Action>(GotoFile)
map <leader>FF <Action>(Find)
map <leader>fg <Action>(FindInPath)
map <leader>fr <Action>(FindUsages)

" LSP type actions
map <leader>fc <Action>(ReformatCode)
map <leader>rn <Action>(RenameElement)
map gl <Action>(ShowErrorDescription)

map [d <Action>(GotoPreviousError)
map ]d <Action>(GotoNextError)

map [f <Action>(MethodUp)
map ]f <Action>(MethodDown)

" git
map <leader>gg <Action>(ActivateVersionControlToolWindow)

map [c <Action>(VcsShowPrevChangeMarker)
map ]c <Action>(VcsShowNextChangeMarker)

" test
map <leader>Tr <Action>(RunClass)
