# terminals
super + {_,shift +} Return
	{$TERMINAL,$TERMINAL_SECONDARY}

# browsers
XF86WWW
	$BROWSER
super + {_,shift +} w
	{$BROWSER,$BROWSER_SECONDARY}

# file managers
super + {_,shift +} e
	{$FILEMANAGER,$TERMINAL -e ranger ~}

# screen locker
super + ctrl + q
	light-locker-command -l

# program launcher
XF86Search
	rofi -show drun
super + space
	rofi -show drun

# notes
super + n
	$TERMINAL -e ~/scripts/notes.sh
super + shift + n
	~/scripts/most_recent_note.sh

# media keys
XF86Audio{Raise,Lower}Volume
	pactl set-sink-volume @DEFAULT_SINK@ {+,-}5%
XF86AudioMute
	pactl set-sink-mute @DEFAULT_SINK@ toggle
XF86AudioMicMute
	pactl set-source-mute @DEFAULT_SOURCE@ toggle
XF86Audio{Play,Pause,Stop,Prev,Next}
	playerctl {play-pause,play-pause,stop,previous,next}
XF86Audio{Rewind,Forward}
	playerctl position 5{-,+}

# mail # TODO: use default client instead of hard-coding this
XF86Mail
	thunderbird

# brightness keys
XF86MonBrightness{Down,Up}
	brightnessctl -q set 5%{-,+}

# screenshot
{_,shift +} Print
	flameshot {gui,full}

# keyboard layouts
super + shift + a
	setxkbmap us
super + shift + s
	setxkbmap se
super + shift + g
	setxkbmap no
