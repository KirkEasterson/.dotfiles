# terminals
super + {_,shift +} Return
	{$TERMINAL,$TERMINAL_SECONDARY}

# browsers
XF86WWW
	$BROWSER
super + {_,shift +} w
	{$BROWSER,$BROWSER_SECONDARY}

# file managers
super + {_,shift +} e
	{$TERMINAL -e yazi ~,$FILEMANAGER}

# screen locker
super + ctrl + q
	lock.sh

# program launcher
XF86Search
	search.sh
super + space
	search.sh
super + ctrl + space
	emoji_picker.sh

# notes
super + o
	notes.sh edit
super + shift + o
	notes.sh view

# media keys
XF86Audio{Lower,Raise}Volume
	change_vol.sh {lower,raise}
XF86AudioMute
	change_vol.sh toggle-mute
XF86AudioMicMute
	wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle
XF86Audio{Play,Pause,Stop,Prev,Next}
	playerctl {play-pause,play-pause,stop,previous,next}
XF86Audio{Rewind,Forward}
	playerctl position 5{-,+}

# requires tlp
XF86WLAN
	wifi toggle
XF86Bluetooth
	bluetooth toggle

# mail # TODO: use default client instead of hard-coding this
XF86Mail
	thunderbird

# brightness keys
XF86MonBrightness{Down,Up}
	change_brightness.sh {lower,raise}

# screenshot
{_,shift +} Print
	screenshot.sh {gui,fullscreen}

# keyboard layouts
super + shift + a
	set_keymap.sh "us(altgr-intl)"
super + shift + s
	set_keymap.sh "se"
super + shift + g
	set_keymap.sh "no"
super + shift + d
	set_keymap.sh "prog-qwerty"
