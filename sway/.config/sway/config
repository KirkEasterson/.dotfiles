set $alt Mod1
set $mod Mod4

set $left h
set $down j
set $up k
set $right l

set $search fuzzel
set $filemanager_alt exec $TERMINAL -e ranger

set $background ~/.config/wall.png

# set $lock_script $HOME/.config/paul/lock.sh swaylock
# set $sleep $lock_script && sleep 3 && systemctl suspend
# set $notify dunstify --timeout 1500
set $laptop eDP-1

output * bg $background fill

for_window [title="Webcam"] floating enable; border pixel 0

font pango:JetBrains Mono Nerd Font 12

# clamshell mode
# https://github.com/swaywm/sway/wiki#clamshell-mode
bindswitch --reload --locked lid:on output $laptop disable
bindswitch --reload --locked lid:off output $laptop enable
exec_always ~/.config/sway/clamshell.sh

# display config
include ~/.config/sway/outputs

# workspace config
# this file is output from `nwg-displays`, and allows for persistent display
# configs when restarting sway
include ~/.config/sway/workspaces

# borders
default_border pixel 1
default_floating_border normal

# gaps
# smart_gaps off
gaps inner 0
gaps outer 0

# lock after 5 minutes
# turn off display after 10 minutes
exec swayidle -w \
   timeout 300 'swaylock' \
   timeout 600 'swaymsg "output * power off"' resume 'swaymsg "output * power on"' \
   before-sleep 'swaylock'

# automatically switch to urgent window
for_window [urgent="latest"] focus

# for flameshot
for_window [app_id="flameshot"] border pixel 0, floating enable, fullscreen disable, move absolute position 0 0

# to know which windows use xwayland
for_window [shell="xwayland"] title_format "[XWayland] %title"

