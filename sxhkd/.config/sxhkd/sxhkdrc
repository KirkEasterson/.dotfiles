# terminals
super + {_,shift +} Return
	{$TERMINAL,$TERMINAL_SECONDARY}

# browsers
XF86WWW
	$BROWSER
super + {_,shift +} w
	{$BROWSER,$BROWSER_SECONDARY}

# file managers
super + {_,shift +} e
	{$FILEMANAGER,$TERMINAL -e ranger ~}

# screen locker
super + ctrl + q
	xautolock -locknow

# program launcher
XF86Search
	rofi -show drun
super + space
	rofi -show drun

# notes
super + n
	$TERMINAL -e ~/scripts/notes.sh
super + shift + n
	~/scripts/most_recent_note.sh

# media keys
XF86Audio{Lower,Raise}Volume
	change_vol.sh {lower,raise}
XF86AudioMute
	change_vol.sh toggle-mute
XF86AudioMicMute
	wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle
XF86Audio{Play,Pause,Stop,Prev,Next}
	playerctl {play-pause,play-pause,stop,previous,next}
XF86Audio{Rewind,Forward}
	playerctl position 5{-,+}

# requires tlp
XF86WLAN
	wifi toggle
XF86Bluetooth
	bluetooth toggle

# mail # TODO: use default client instead of hard-coding this
XF86Mail
	thunderbird

# brightness keys
XF86MonBrightness{Down,Up}
	change_brightness.sh {lower,raise}

# screenshot
{_,shift +} Print
	flameshot {gui,full}

# keyboard layouts
super + shift + a
	setxkbmap us
super + shift + s
	setxkbmap se
super + shift + g
	setxkbmap no
