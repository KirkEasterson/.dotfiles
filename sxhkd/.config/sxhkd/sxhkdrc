# terminals
super + {_,shift +} Return
	{flatpak run org.wezfurlong.wezterm,alacritty}

# browsers
super + {_,shift +} w
	{firefox,chromium-browser}

# file managers
super + {_,shift +} e
	{pcmanfm,lflauncher}

# screen locker
super + x
	light-locker-command -l

# program launcher
super + p
	rofi -show drun

# media keys
XF86Audio{Raise,Lower}Volume
	pactl set-sink-volume @DEFAULT_SINK@ {+,-}10%
XF86AudioMute
	pactl set-sink-mute @DEFAULT_SINK@ toggle
XF86AudioMicMute
	pactl set-source-mute @DEFAULT_SOURCE@ toggle
XF86AudioPlay
	playerctl play-pause
XF86AudioStop
	playerctl stop
XF86AudioNext
	playerctl next
XF86AudioPrev
	playerctl previous

# brightness keys
XF86MonBrightness{Down,Up}
	brightnessctl -q set 5%{-,+}
XF86MonBrightnessDown

# screenshot
{_,shift +} Print
	flameshot {gui,full}

# keyboard layouts
super + shift + a
	setxkbmap us
super + shift + s
	setxkbmap se
super + shift + g
	setxkbmap no
